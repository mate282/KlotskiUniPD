<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="750.0" styleClass="anchorPane" stylesheets="@Style/main-style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.klotski.view.GameView">
   <children>
      <GridPane fx:id="gridBoard" alignment="CENTER" layoutX="329.0" layoutY="48.0" styleClass="gridBoard">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
      <ToolBar prefHeight="30.0" prefWidth="750.0" styleClass="menuBar">
         <items>
            <Button mnemonicParsing="false" onAction="#onSaveButtonClick" styleClass="menuButton" text="Save" />
            <Button mnemonicParsing="false" onAction="#onUndoButtonClick" styleClass="menuButton" text="Undo" />
            <Button fx:id="btn2" mnemonicParsing="false" onAction="#onResetButtonClick" styleClass="menuButton" text="Reset" />
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#onBackButtonClick" styleClass="menuButton" text="Back" />
         </items>
      </ToolBar>
      <Label fx:id="movesCounterLbl" layoutX="45.0" layoutY="125.0" prefHeight="50.0" prefWidth="130.0" styleClass="movesCounter" text="MovesCounter: 0" />
      <Button layoutX="45.0" layoutY="217.0" mnemonicParsing="false" onAction="#onHelpButtonClick" text="Help" />
   </children>
</AnchorPane>
